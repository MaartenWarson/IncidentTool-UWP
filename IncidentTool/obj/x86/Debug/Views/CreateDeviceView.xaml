<Page
    x:Class="IncidentTool.Views.CreateDeviceView"
    xmlns:vm="using:IncidentTool.ViewModels"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IncidentTool.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Resources (binding met CreateDeviceViewModel) -->
    <Page.Resources>
        <vm:CreateDeviceViewModel x:Key="createDeviceViewModel"/>
    </Page.Resources>   
   
    <Grid>
        <RelativePanel Padding="20">
            <!-- Titel -->
            <TextBlock x:ConnectionId='2' Name="Title" Text="MAAK EEN TOESTEL AAN" Foreground="White" FontSize="36" FontWeight="Bold"/>
            
            <!-- Device name -->
            <TextBlock x:ConnectionId='3' Name="DeviceNameTextBlock" Text="Naam" Foreground="White" FontSize="24" Margin="0,50,0,0"
                       RelativePanel.Below="Title" RelativePanel.AlignLeftWithPanel="True"/>
            <TextBox x:ConnectionId='4' Name="DeviceNameTextBox" RelativePanel.RightOf="DeviceNameTextBlock" RelativePanel.Below="Title" RelativePanel.AlignBottomWith="DeviceNameTextBlock" 
                     Margin="20,50,0,0" Width="300" Foreground="#FF007689"
                     Text="{Binding Name, Source={StaticResource createDeviceViewModel}, Mode=TwoWay}"/>
            
            <!-- Device type -->
            <TextBlock x:ConnectionId='5' Name="DeviceTypeTextBlock" Text="Type" Foreground="White" FontSize="24" Margin="0,20,0,0"
                       RelativePanel.Below="DeviceNameTextBlock" RelativePanel.AlignLeftWithPanel="True"/>
            <ListBox x:ConnectionId='6' Name="DeviceTypeListBox" RelativePanel.RightOf="DeviceTypeTextBlock" RelativePanel.Below="DeviceNameTextBlock" RelativePanel.AlignLeftWith="DeviceNameTextBox"
                     Margin="20,20,0,0" MinWidth="300" MaxWidth="300" MinHeight="200" MaxHeight="300" BorderBrush="#66000000" BorderThickness="2" Background="#66FFFFFF" Foreground="#FF007689"
                     ItemsSource="{Binding DeviceTypes, Source={StaticResource createDeviceViewModel}}"
                     SelectedItem="{Binding SelectedDeviceType, Source={StaticResource createDeviceViewModel}, Mode=TwoWay}">
                <!-- Voor ieder device type wordt een ItemTemplate gemaakt -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Location -->
            <TextBlock x:ConnectionId='7' Name="LocationTextBlock" Text="Locatie" Foreground="White" FontSize="24" Margin="0,20,0,0"
                       RelativePanel.Below="DeviceTypeListBox" RelativePanel.AlignLeftWithPanel="True"/>
            <TextBox x:ConnectionId='8' Name="LocationTextBox" RelativePanel.RightOf="LocationTextBlock" RelativePanel.Below="DeviceTypeListBox" RelativePanel.AlignLeftWith="DeviceTypeListBox" RelativePanel.AlignTopWith="LocationTextBlock"
                     Margin="20,20,0,0" Width="300" Foreground="#FF007689"
                     Text="{Binding Location, Source={StaticResource createDeviceViewModel}, Mode=TwoWay}"/>

            <!-- Create-knop -->
            <Button x:ConnectionId='9' Name="CreateButton" Content="Maak aan" Foreground="White" FontSize="24" Margin="20,35,0,0"
                    RelativePanel.Below="LocationTextBlock" RelativePanel.AlignLeftWith="LocationTextBox"
                    Command="{Binding CreateDeviceCommand, Source={StaticResource createDeviceViewModel}}"/>

            <!-- Melding -->
            <TextBlock x:ConnectionId='10' Name="MessageTextBlock" Text="{Binding Message, Source={StaticResource createDeviceViewModel}}"
                       RelativePanel.Below="CreateButton" Margin="0,20,0,0" Foreground="#FF007689"/>
        </RelativePanel>
    </Grid>
</Page>

